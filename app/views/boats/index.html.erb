<p id="notice"><%= notice %></p>
<div class="boats_table">
  <h1>Boats</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Storage</th>
        <th>Location</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @boats.each do |boat| %>
        <tr>
          <td><%= boat.name %></td>
          <td><%= boat.storage %></td>
          <td><%= boat.location %></td>
          <td><%= boat.user.fullname %></td>
          <td><%= link_to 'Show', boat %></td>
          <td><%= link_to 'Edit', edit_boat_path(boat) %></td>
          <td><%= link_to 'Destroy', boat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

